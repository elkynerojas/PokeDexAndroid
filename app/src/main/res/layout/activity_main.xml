<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tlPokemonNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/teal_200"
        tools:text="Pikachu"
        android:textAlignment="center"
        android:textSize="25dp"
        android:layout_marginTop="20dp"
        />
    <ImageView
        android:id="@+id/pokemonImageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="40dp"
        android:contentDescription="Imagen pokemon"
        app:layout_constraintTop_toTopOf="@+id/tlPokemonNombre"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/pokemonHeightTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/pokemonImageView"
        android:textColor="@color/black"
        tools:text="Altura: 00"
        android:textAlignment="center"
        android:textSize="15dp"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/pokemonWeightTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/pokemonHeightTextView"
        android:textColor="@color/black"
        tools:text="Peso: 00"
        android:textAlignment="center"
        android:textSize="15dp"
        android:layout_marginTop="30dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>